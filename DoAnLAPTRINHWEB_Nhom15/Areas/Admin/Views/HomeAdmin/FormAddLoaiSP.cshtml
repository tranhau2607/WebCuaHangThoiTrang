
@{
    ViewBag.Title = "FormAddLoaiSP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model DoAnLAPTRINHWEB_Nhom15.Areas.Admin.Models.LoaiSanPham

<style>
    .add_product_main {
        margin-left: 3rem;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
        padding: 30px;
    }

        .add_product_main h2 {
            border-bottom: 2px solid black;
        }

        .add_product_main a:hover {
            color: red;
            text-decoration: none;
            text-transform: uppercase;
        }

    .add_product {
        display: flex;
        text-align: center;
    }

        .add_product div {
            padding: 0 20px;
        }

        .add_product input {
            width: 30rem;
        }

    .btn_add {
        margin-left: 32rem;
    }
</style>

<div class="add_product_main">

    <h2 style="text-align:center">THÊM LOẠI SẢN PHẨM MỚI</h2>
    <form action="/Admin/HomeAdmin/FormAddLoaiSP" method="post">
        <div class="add_product">
            <div>
                <div>
                    <label>Mã Loại Sản Phẩm</label>
                    <input type="text" name="MaLoai" class="form-control" />
                    @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" }) <br /> <br />
                </div>
                <div>
                    <label>Tên Loại Sản Phẩm</label>
                    <input type="text" name="TenLoai" class="form-control" />
                    @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })<br /><br />
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn_add">Thêm mới</button>
    </form>
    <h5><a href="/Admin/HomeAdmin/ShowLoaiSP">Trở lại trang Loại Sản phẩm</a></h5>
</div>


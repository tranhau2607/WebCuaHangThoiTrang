
@{
    ViewBag.Title = "FormAddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@model DoAnLAPTRINHWEB_Nhom15.Areas.Admin.Models.Products
<style>
    .add_product_main {
        margin-left: 3rem;
        box-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
        padding:30px;
    }
        .add_product_main h2 {
            border-bottom: 2px solid black;
        }
        .add_product_main a:hover {
            color:red;
            text-decoration:none;
            text-transform:uppercase;
        }
        .add_product {
            display: flex;
            text-align: center;
        }
    .add_product div{
        padding:0 20px ;
    }
        .add_product input {
            width: 30rem;
        }
    .btn_add{
        margin-left:32rem;
    }
</style>

<div class="add_product_main">
    <h2 style="text-align:center">THÊM SẢN PHẨM MỚI</h2>
    <form action="/Admin/HomeAdmin/FormAddProduct" method="post">
        <div class="add_product">
            <div>
                <div>
                    <label>Mã Sản Phẩm</label>
                    <input type="text" name="MaSanPham" class="form-control" />
                    @Html.ValidationMessageFor(model => model.MaSanPham, "", new { @class = "text-danger" }) <br /> <br />
                </div>
                <div>
                    <label>Tên Sản Phẩm</label>
                    <input type="text" name="TenSanPham" class="form-control" />
                    @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })<br /><br />
                </div>
                <div>
                    <label>Giá</label>
                    <input type="text" name="Gia" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })<br /><br />
                </div>
                <div>
                    <label>Mô Tả</label>
                    <input type="text" name="MoTa" class="form-control" /><br /><br />
                </div>
            </div>
            <div>

                <div>
                    <label>Ảnh Bìa</label>
                    <input type="file" name="Anh" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" }) <br /> <br />
                </div>
                <div>
                    <label>Mã Loại</label>
                    <input type="text" name="MaLoai" class="form-control" />
                    @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })<br /><br />
                </div>
                <div>
                    <label>Mã NSX</label>
                    <input type="text" name="MaNhaSanXuat" class="form-control" />
                    @Html.ValidationMessageFor(model => model.MaNhaSanXuat, "", new { @class = "text-danger" })<br /><br />
                </div>
                <div>
                    <label>Sản Phẩm Tồn</label>
                    <input type="text" name="SanPhamTon" class="form-control" />
                    @Html.ValidationMessageFor(model => model.SanPhamTon, "", new { @class = "text-danger" })<br /><br />
                </div>

            </div>
        </div>
        <button type="submit" class="btn btn-primary btn_add">Thêm mới</button>
    </form>
    <h5><a href="/Admin/HomeAdmin/ShowProduct">Trở lại trang Sản Phẩm</a></h5>
</div>





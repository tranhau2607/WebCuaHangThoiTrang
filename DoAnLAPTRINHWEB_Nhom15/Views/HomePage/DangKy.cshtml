
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/Content/User/css/styleDangKy.css" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <title>DangKy</title>
    <style>
        .loi
        {
            color:red;
            text-align:left
        }
    </style>
</head>
<body>
    <form action="/HomePage/DangKy" method="post">
        <div class="backg_DK" style="background-image: url(/Content/User/image/bgdangnhap.jpg);">
            <div class="form" id="signin-form">
                <a href="/HomePage/PageHome" class="form-logo">
                    <img src="/Content/User/image/LogoVascara.png" alt="Dung Mobile">
                </a>
                <div class="form-group">
                    <input type="email" class="form-input" placeholder="Email" name="Email" id="email" value="@ViewBag.Email">
                    <p class="loi">@ViewBag.LoiEmail</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-email"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" placeholder="Họ Tên" name="HoTen" id="username" value="@ViewBag.HoTen">
                    <p class="loi">@ViewBag.LoiHoTen</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-email"></span>
                </div>
                <div class="form-group">
                    <input type="date" class="form-input" placeholder="Ngày Sinh" name="NgaySinh" id="username" value="@ViewBag.NgaySinh">
                    <p class="loi">@ViewBag.LoiNgaySinh</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-email"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" placeholder="Giới Tính" name="GioiTinh" id="username" value="@ViewBag.GioiTinh">
                    <p class="loi">@ViewBag.LoiGioiTinh</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-email"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" placeholder="Số Điện Thoại" name="SoDienThoai" id="username" value="@ViewBag.SoDienThoai">
                    <p class="loi">@ViewBag.LoiSoDienThoai</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-email"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" placeholder="Tên Đăng Nhập" name="TenDN" id="username" value="@ViewBag.TenDN">
                    <p class="loi">@ViewBag.LoiTenDN</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-email"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" placeholder="Mật Khẩu" name="MatKhau" id="password" value="@ViewBag.MatKhau">
                    <p class="loi">@ViewBag.LoiMatKhau</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-password"></span>
                </div>

                <div class="form-group">
                    <input type="password" class="form-input" placeholder="Nhập Lại Mật Khẩu" name="MatKhau2" id="signin-password" value="@ViewBag.MatKhau2">
                    <p class="loi">@ViewBag.LoiMatKhau2</p>
                    <span class="form-input-icon err">
                        <i class='bx bx-error-circle'></i>
                    </span>
                    <span class="form-input-icon success">
                        <i class='bx bx-check-circle'></i>
                    </span>
                    <span class="form-input-err-msg" data-err-for="signin-password"></span>
                </div>
                <div class="form-group form-group-checkbox">
                    <input type="checkbox" name="remember" id="remember" checked="checked">
                    <label for="remember">
                        Đồng ý với điều khoản !
                        <i class='bx bx-check'></i>
                    </label>
                </div>
                <button class="form-btn" id="signin-btn">Đăng ký</button>
                
                <span class="form-txt">
                   Bạn đã có tài khoản
                    <a href="/HomePage/DangNhap">Đăng Nhập !</a>
                </span>
                <span class="form-txt">
                    <a href="#"></a>
                </span>
                <span class="form-txt">
                    <a href="/HomePage/PageHome">Trang Chủ</a>
                </span>
            </div>
        </div>
    </form>

    <script src="./js/js_login.js"></script>
</body>
</html>



@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap"
          rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="./css/css_login.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/Content/User/css/styleFor.css">
</head>

<body>
    <div class="forgotpass" style="background-image: url(/Content/User/image/bgdangnhap.jpg);">
        <div class="form" id="signin-form">
            <a href="/HomePage/PageHome" class="form-logo">
                <img src="/Content/User/image/LogoVascara.png" alt="Dung Mobile">
            </a>
            <div class="form-group">
                <h3>Nhập Email tài khoản của bạn</h3><br>
                <input type="email" class="form-input" placeholder="Email" name="email" id="email">
                <span class="form-input-icon err">
                    <i class='bx bx-error-circle'></i>
                </span>
                <span class="form-input-icon success">
                    <i class='bx bx-check-circle'></i>
                </span>
                <span class="form-input-err-msg" data-err-for="signin-email"></span>
            </div>

            <span class="form-txt">
                <a href="">Gửi Xác Nhận</a>
            </span>
            <span class="form-txt">
                <a href="/HomePage/DangNhap">Quay lại Đăng Nhập</a>
            </span>
        </div>
    </div>
</body>

</html>
